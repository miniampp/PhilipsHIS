
@model List

<!DOCTYPE html>
<html>
    <head>
    </head>
    <body>
<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Patient Information</h2>
            <hr />  @*line*@
        </div>
        @*<div asp-validation-summary="All"></div>*@
        
        <div class="row g-3">
            <h4>Personal information</h4>
            <div class="col-md-2">
                <label asp-for="HN"></label>
                <input asp-for="HN" class="form-control" readonly="">
                <span asp-validation-for="HN" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                    <label asp-for="Title"></label>
                    <select class="form-select" asp-for="Title" readonly="">
                        <option selected>Choose...</option>
                        <option value="Mr.">Mr.</option>
                        <option value="Ms.">Ms.</option>
                        <option value="Mr.s">Mrs.</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" readonly="">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" readonly="">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="DOB"></label>
                    <input asp-for="DOB" class="form-control" type="date" readonly="">
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="Gender"></label>
                    <select class="form-select" asp-for="Gender" readonly="">
                        <option selected>Choose...</option>
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label asp-for="BloodGroup"></label>
                    <select class="form-select" asp-for="BloodGroup" readonly="">
                        <option selected>Choose...</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label asp-for="Height"></label>
                    <input asp-for="Height" class="form-control" readonly="">
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="Weight"></label>
                    <input asp-for="Weight" class="form-control" readonly="">
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="Allergies"></label>
                    <input asp-for="Allergies" class="form-control" readonly="">
                    <span asp-validation-for="Allergies" class="text-danger"></span>
                </div>

                <h4>Contact</h4>

                <div class="col-md-3">
                    <label asp-for="Home"></label>
                    <input asp-for="Home" class="form-control" readonly="">
                    <span asp-validation-for="Home" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Work"></label>
                    <input asp-for="Work" class="form-control" readonly="">
                    <span asp-validation-for="Work" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Mobile"></label>
                    <input asp-for="Mobile" class="form-control" readonly="">
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Fax"></label>
                    <input asp-for="Fax" class="form-control" readonly="">
                    <span asp-validation-for="Fax" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="EmergNo"></label>
                    <input asp-for="EmergNo" class="form-control" readonly="">
                    <span asp-validation-for="EmergNo" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="EmergRela"></label>
                    <input asp-for="EmergRela" class="form-control" readonly="">
                    <span asp-validation-for="EmergRela" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" readonly="">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>


                <h4>Address</h4>

                <div class="col-md-6">
                    <label asp-for="Address1"></label>
                    <input asp-for="Address1" class="form-control" readonly="">
                    <span asp-validation-for="Address1" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Address2"></label>
                    <input asp-for="Address2" class="form-control" readonly="">
                    <span asp-validation-for="Address2" class="text-danger"></span>
                </div>

                <h4>Vital Signs</h4>
                <div class="col-md-2">
                    <label asp-for="HR"></label>
                    <input asp-for="HR" class="form-control" readonly="">
                    <span asp-validation-for="HR" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="SpO2"></label>
                    <input asp-for="SpO2" class="form-control" readonly="">
                    <span asp-validation-for="SpO2" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="RR"></label>
                    <input asp-for="RR" class="form-control" readonly="">
                    <span asp-validation-for="RR" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="Temp"></label>
                    <input asp-for="Temp" class="form-control" readonly="">
                    <span asp-validation-for="Temp" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="BP"></label>
                    <input asp-for="BP" class="form-control" readonly="">
                    <span asp-validation-for="BP" class="text-danger"></span>
                </div>
            
                <div class="col-12">
                    <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
                    <a asp-controller="List" asp-action="ListIndex" class="btn btn-light" style="width:150px"> Back to list </a>
                </div>
        </div>
    </div>

</form>
</body>
</html>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}

